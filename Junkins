pipeline{
	agent any
		stages{
			stage('One'){
				steps{
					echo 'hi, this is satish'
				}
			}
			stage('Two'){
				steps{
					input( 'Do you want to proceed?')
				}
			}
			stage('Three'){
				when{
					not{
						branch "master"
				}
			}
			steps{
				echo 'hello'
				}
			}
			stage('Four'){
				parallel{
					stage('unit test'){
							steps{
								echo 'running the unit test...'
							}
				}
			stage('Integration test'){
						agent{
							docker{
								reuseNode false
								image 'ubuntu'
							}
						}
						steps {
							echo 'Running the integration test..'
						}
				}
			}	
